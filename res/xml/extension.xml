<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/wings_title" >

        <!-- Theme Room -->
        <Preference
            android:key="theme_category"
            android:title="@string/theme_title"
            android:fragment="com.wings.extension.categories.ThemeSettings"
            android:summary="@string/theme_summary"
            settings:layout="@layout/wings_dashboard_preference_single"
            android:icon="@drawable/ic_settings_theme"/>
        
        <!-- Status Bar -->
        <Preference
            android:key="statusbar_category"
            android:title="@string/statusbar_title"
            android:fragment="com.wings.extension.categories.StatusBarSettings" 
            android:summary="@string/statusbar_summary"
            settings:layout="@layout/wings_dashboard_preference_top"
            android:icon="@drawable/ic_settings_statusbar"/>

        <!-- Quick Settings panel -->
        <Preference
            android:key="quicksettings_category"
            android:title="@string/quicksettings_title"
            android:fragment="com.wings.extension.categories.QuickSettings"
            android:summary="@string/quicksettings_summary"
            settings:layout="@layout/wings_dashboard_preference_bottom"
            android:icon="@drawable/ic_settings_quicksettings"/>

        <!-- Buttons -->
        <Preference
            android:key="buttonsettings_category"
            android:title="@string/button_title"
            android:fragment="com.wings.extension.categories.ButtonSettings"
            android:summary="@string/button_summary"
            settings:layout="@layout/wings_dashboard_preference_top"
            android:icon="@drawable/ic_settings_buttons" />

        <!-- Gestures -->
        <Preference
            android:key="gestures_category"
            android:title="@string/gestures_title" 
            android:fragment="com.wings.extension.categories.GestureSettings"
            android:summary="@string/gestures_summary"
            settings:layout="@layout/wings_dashboard_preference_middle"
            android:icon="@drawable/ic_settings_sos_gestures"/>

        <!-- Lock Screen -->
        <Preference
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title" 
            android:fragment="com.wings.extension.categories.LockScreenSettings"
            android:summary="@string/lockscreen_summary"
            settings:layout="@layout/wings_dashboard_preference_bottom"
            android:icon="@drawable/ic_settings_lockscreens"/>

        <!-- Notifications -->
        <Preference
            android:key="notifications_category"
            android:title="@string/notifications_title"
            android:fragment="com.wings.extension.categories.NotificationSettings"
            android:summary="@string/notifications_summary"
            settings:layout="@layout/wings_dashboard_preference_top"
            android:icon="@drawable/ic_settings_notifications"/>

        <!-- system -->
        <Preference
            android:key="system_category"
            android:title="@string/system_title" 
            android:fragment="com.wings.extension.categories.SystemSettings"
            android:summary="@string/system_summary"
            settings:layout="@layout/wings_dashboard_preference_middle"
            android:icon="@drawable/ic_settings_system"/>
        
        <!-- Misc -->
        <Preference
            android:key="misc_category"
            android:title="@string/misc_title" 
            android:fragment="com.wings.extension.categories.MiscSettings"
            android:summary="@string/misc_summary"
            settings:layout="@layout/wings_dashboard_preference_bottom"
            android:icon="@drawable/ic_settings_miscs"/>
</PreferenceScreen>
